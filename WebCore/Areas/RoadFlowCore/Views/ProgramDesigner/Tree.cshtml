@{
    ViewBag.Title = "Tree";
}

    <style type="text/css">
        body {
            padding: 0;
            overflow: hidden;
        }
    </style>
    <form id="form1">
        <div id="tree"></div>
    </form>
    <script type="text/javascript">
        var appID = '@ViewBag.appId';
        var tabID = '@ViewBag.tabId';
        var rootID = '@ViewBag.rootId';
        var roadTree = null;
        $(function () {
            roadTree = new RoadUI.Tree({
                id: "tree", path: "../Dictionary/Tree1?ischild=1&root=" + rootID,
                refreshpath: "../Dictionary/TreeRefresh", onclick: openUrl
            });
        });
        function openUrl(json) {
            parent.frames[1].location = "List?typeid=" + json.id + "&appid=" + appID + "&tabid=" + tabID;
        }
        function reLoad(id) {
            roadTree.refresh(id);
        }
    </script>

