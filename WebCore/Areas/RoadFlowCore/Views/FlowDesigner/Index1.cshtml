@{
    ViewBag.Title = "Index1";
}


    <style type="text/css">
        body {
            overflow: hidden;
        }
    </style>
    <form method="post">
        <div class="toolbar" style="margin-top:0; border-top:none 0;">
            <a href="javascript:void(0);" onclick="flowAttrSetting(); return false;" id="flowatt">
                <i class="fa fa-wrench"></i><label>属性</label>
            </a>

            <span class="toolbarsplit">&nbsp;</span>

            <a href="javascript:void(0);" onclick="addStep(); return false;">
                <i class="fa fa-square"></i><label>步骤</label>
            </a>

            <a href="javascript:void(0);" onclick="addSubFlow(); return false;">
                <i class="fa fa-delicious"></i><label>子流程</label>
            </a>

            <a href="javascript:void(0);" onclick="addConn(0); return false;">
                <i class="fa fa-long-arrow-right"></i><label>直线</label>
            </a>
            <a href="javascript:void(0);" onclick="addConn(1); return false;">
                <i class="fa fa-level-down"></i><label>拆线</label>
            </a>
            <a href="javascript:void(0);" onclick="copyStep(); return false;">
                <i class="fa fa-copy"></i><label>复制</label>
            </a>
            <a href="javascript:void(0);" onclick="removeObj(); return false;" title="删除当前选定对象">
                <i class="fa fa-times"></i><label>删除</label>
            </a>
            <span class="toolbarsplit">&nbsp;</span>

            <a href="javascript:void(0);" onclick="saveFlow('save'); return false;">
                <i class="fa fa-save"></i><label>保存</label>
            </a>
            <a href="javascript:void(0);" onclick="saveAs(); return false;">
                <i class="fa fa-floppy-o"></i><label>另存为</label>
            </a>

            <span class="toolbarsplit">&nbsp;</span>

            <a href="javascript:void(0);" onclick="saveFlow('install'); return false;">
                <i class="fa fa-check-square-o"></i><label>安装</label>
            </a>
            <a href="javascript:void(0);" onclick="saveFlow('uninstall'); return false;">
                <i class="fa fa-minus-circle"></i><label>卸载</label>
            </a>

        </div>
        <div id="flowdiv" style="margin:0; padding:0;"></div>
        <script src="/RoadFlowResources/scripts/flowDesigner/draw-min.js" type="text/javascript"></script>
        <script src="/RoadFlowResources/scripts/flowDesigner/workflow.js" type="text/javascript"></script>
        <script type="text/javascript">
            var appid = '@ViewBag.appId';
            var iframeid = '@ViewBag.tabId';
            var flowid = '@ViewBag.flowId';
            var isnewflow = '@ViewBag.isNewFlow';
            var dialog = top.mainDialog || new RoadUI.Window();
            $(function () {
                if (flowid.length > 0) {
                    openFlow1(flowid);
                }
                if ("1" == isnewflow) {
                    flowAttrSetting(isnewflow);
                }
            });


            

        </script>
    </form>
