
@{
    ViewBag.Title = "Tree";
}

<form id="form1" runat="server">
    <div id="tree"></div>
</form>
<script type="text/javascript">
    var appID = '@ViewBag.appid';
    var tabID = '@ViewBag.tabid';
    var roadTree = null;
    $(function () {
        roadTree = new RoadUI.Tree({ id: "tree", path: "Tree1", refreshpath: "TreeRefresh", onclick: openUrl });
    });
    function openUrl(json) {
        var isNoRead = json.id == "00000000000000000000000000000000" ? "1" : "";
        parent.frames[1].location = "list?dirid=" + json.id + "&appid=" + appID + "&tabid=" + tabID + "&isnoread=" + isNoRead;
    }
    function reLoad(id) {
        roadTree.refresh(id);
    }
</script>




