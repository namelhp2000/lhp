@{
    ViewBag.Title = "Tree";
}
<form id="form1" runat="server">
    <div id="tree"></div>
</form>
<script type="text/javascript">
    var AppID = '@ViewBag.appid';
    var isselect = '';
    var roadTree = null;
    $(function () {
        roadTree = new RoadUI.Tree({
            id: "tree", path: "Tree1?@Html.Raw(ViewBag.query)", refreshpath: "TreeRefresh?@Html.Raw(ViewBag.query)", onclick: openUrl });
    });
    function openUrl(json) {
        if (json.id == "myshare") {
            parent.frames[1].location = "MyShare?@Html.Raw(ViewBag.query)";
        } else if (json.id == "sharemy") {
            parent.frames[1].location = "ShareMy?@Html.Raw(ViewBag.query)";
        } else {
            parent.frames[1].location = "List?id=" + json.id + "&@Html.Raw(ViewBag.query)";
        }
    }
    function reLoad(id) {
        roadTree.refresh(id);
    }
</script>

