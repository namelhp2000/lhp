@{
    ViewBag.Title = "Html";
}

<table cellpadding="0" cellspacing="1" border="0" width="95%" class="formtable">
    <tr>
        <th style="width:80px;">绑定字段：</th>
        <td><select class="myselect2" id="bindfiled" style="width:270px"></select></td>
    </tr>
    <tr>
        <th>工具栏：</th>
        <td>
            <input type="radio" id="toolbar_0" name="toolbar" style="vertical-align:middle;" value="formLoad.ckeditor_toolbarFullGroups" /><label style="vertical-align:middle;" for="toolbar_0">完整</label>
            <input type="radio" id="toolbar_1" name="toolbar" style="vertical-align:middle;" value="formLoad.ckeditor_toolbarMessageGroups" /><label style="vertical-align:middle;" for="toolbar_1">简洁</label>
            <input type="radio" id="toolbar_2" name="toolbar" style="vertical-align:middle;" value="formLoad.ckeditor_toolbarMobileGroups" /><label style="vertical-align:middle;" for="toolbar_2">极简</label>
        </td>
    </tr>
    <tr>
        <th>宽度：</th>
        <td><input type="text" id="width" class="mytext" style="width:270px;" /> </td>
    </tr>
    <tr>
        <th>高度：</th>
        <td><input type="text" id="height" class="mytext" style="width:270px" /> </td>
    </tr>
</table>
<script type="text/javascript">
    function initSelect2() {
        new RoadUI.Select().init2($("#bindfiled"));
    }
</script>