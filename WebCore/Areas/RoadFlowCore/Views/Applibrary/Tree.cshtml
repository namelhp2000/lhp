@{
    ViewBag.Title = "Tree";

}

    <form id="form1" runat="server">
        <div id="tree"></div>
    </form>
    <script type="text/javascript">
    
    var roadTree = null;
    $(function ()
    {
        roadTree = new RoadUI.Tree({ id: "tree", path: "../Dictionary/Tree1?ischild=1&root="+"@ViewBag.rootId", refreshpath: "../Dictionary/TreeRefresh", onclick: openUrl });
    });
    function openUrl(json)
    {
        parent.frames[1].location = "List?typeid=" + json.id + "&" +"@ViewBag.query";
    }
    function reLoad(id)
    {
        roadTree.refresh(id);
    }
    </script>

