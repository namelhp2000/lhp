@{
    ViewBag.Title = "Info";


}
@model   RoadFlow.Model.User  
    <form id="form1" method="post">
        @Html.AntiForgeryToken()
        <table cellpadding="0" cellspacing="1" border="0" width="96%" class="formtable" style="margin-top:15px;">
            <tr>
                <th style="width: 100px;">办公电话：</th>
                <td>
                    <input type="text" name="Tel" id="Tel" class="mytext" value="@Model.Tel" runat="server" style="width: 90%" />
                </td>
            </tr>
            <tr>
                <th>手机：</th>
                <td>
                    <input type="text" name="MobilePhone" id="MobilePhone" class="mytext" runat="server" value="@Model.Mobile" style="width: 90%" />
                </td>
            </tr>
            <tr>
                <th>传真：</th>
                <td>
                    <input type="text" name="Fax" id="Fax" value="@Model.Fax" class="mytext" style="width: 90%" />
                </td>
            </tr>

            <tr>
                <th>邮箱：</th>
                <td>
                    <input type="text" name="Email" id="Email" class="mytext" value="@Model.Email" style="width: 90%" />
                </td>
            </tr>
            <tr>
                <th>QQ：</th>
                <td>
                    <input type="text" name="QQ" id="QQ" value="@Model.QQ" class="mytext" style="width: 90%" />
                </td>
            </tr>
            <tr>
                <th>微信号：</th>
                <td>
                    <input type="text" name="WeiXin" id="WeiXin" value="@Model.WeiXin" class="mytext" style="width: 90%" />
                </td>
            </tr>
            <tr>
                <th>其他联系方式：</th>
                <td>
                    <input type="text" name="OtherTel" id="OtherTel" value="@Model.OtherTel" class="mytext" style="width: 90%" />
                </td>
            </tr>
            <tr>
                <th>说明：</th>
                <td>
                    <textarea class="mytextarea" name="Note" id="Note" style="width:90%; height:90px;">@Html.Raw(Model.Note)</textarea>
                </td>
            </tr>
        </table>
        <div class="buttondiv">
            <input type="button" value="确定保存" class="mybutton" onclick="save(this);" />
            <input type="button" class="mybutton" value="取消关闭" style="margin-left: 5px;" onclick="new RoadUI.Window().close();" />
        </div>
        <script type="text/javascript">
            function save(but) {
                var f = document.forms[0];
                if (new RoadUI.Validate().validateForm(f)) {
                    var o = RoadUI.Core.serializeForm($(f));
                    $(but).prop("disabled", true);
                    $.ajax({
                        url: "SaveInfo"+"@Html.Raw(ViewBag.queryString)", data: o, type: "post", success: function (text) {
                            if (RoadUI.Core.checkLogin(text, false)) {
                                alert(text);
                            }
                            $(but).prop("disabled", false);
                        }
                    });
                }
            }
        </script>
    </form>


